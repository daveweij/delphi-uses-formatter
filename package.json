{
    "name": "pascal-uses-formatter",
    "displayName": "pascal-uses-formatter",
    "description": "sorts the uses section in pascal files",
    "version": "0.0.1",
    "publisher": "tuncb",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:pascal"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.formatUses",
                "title": "Format uses section"
            }
        ],
        "languages": [
            {
             "id": "pascal",
             "extensions": [
                 ".pas"
             ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
